# resize window (you can also use the mouse for that)
bindsym $mod+r mode "resize"
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym l resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym j resize shrink height 5 px or 5 ppt
        bindsym h resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Right resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Left resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Set shut down, restart and locking features
bindsym $mod+Escape mode "$mode_system"
set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym u exec --no-startup-id i3exit switch_user, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

    # exit system mode: "Enter" or "Escape"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## Manual management of external displays
bindsym $mod+m mode "$mode_display"
set $mode_display Choose monitor connection: (s)ingle, (i)ntegrated, (h)ybrid-dell, (n)vidia-dell, (p)rojector, (w)allpaper
mode "$mode_display" {
    #bindsym s exec --no-startup-id xrandr --auto --output eDP-1-1 --primary && notify-send 'Single monitor configured', mode "default"
    bindsym s exec --no-startup-id xrandr --auto --output eDP-1 --primary && notify-send 'Single monitor configured', mode "default"
    bindsym i exec --no-startup-id xrandr && xrandr --auto --output DP-1-2 --primary --mode 3440x1440 --above eDP-1 && notify-send 'Dell output for hybrid configured', mode "default"
    bindsym h exec --no-startup-id xrandr --auto --output DP-1-1 --primary --mode 3440x1440 --above eDP-1 && notify-send 'Dell output for hybrid configured', mode "default"
    bindsym n exec --no-startup-id xrandr --auto --output DP-1 --primary --mode 3440x1440 --above eDP-1-1 && notify-send 'Dell output for nvidia configured', mode "default"
    bindsym p exec --no-startup-id xrandr --auto --output HDMI-0 --mode 1920x1080 --same-as eDP-1-1 && notify-send 'HDMI projector configured', mode "default"
    bindsym w exec $wallpaper_reset

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

## Manual management of graphic modes
bindsym $mod+g mode "$mode_graphics"
set $mode_graphics Choose graphics: (i)ntegrated, (h)ybrid, (n)vidia
mode "$mode_graphics" {
    bindsym i exec --no-startup-id optimus-manager --switch integrated --no-confirm, mode "default"
    bindsym h exec --no-startup-id optimus-manager --switch hybrid --no-confirm, mode "default"
    bindsym n exec --no-startup-id optimus-manager --switch nvidia --no-confirm, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar
    status_command i3blocks
	position top

## please set your primary output first. Example: 'xrandr --output eDP1 --primary'
    tray_output primary
	#tray_output eDP-1-1
    #xrandr --output DP-1 --primary

	bindsym button4 nop
	bindsym button5 nop
    font pango:Fira Code Nerd Font 11
	strip_workspace_numbers yes

    colors {
        #background #222D31
        background  #383c4a
        statusline  #F9FAF9
        separator   #4b5162

#                      border  backgr. text
        #focused_workspace  #F9FAF9 #16a085 #292F34
        focused_workspace   #383c4a #5294e2 #383c4a
        active_workspace   #595B5B #353836 #FDF6E3
        inactive_workspace #595B5B #222D31 #EEE8D5
        binding_mode       #16a085 #2C2C2C #F9FAF9
        urgent_workspace   #16a085 #FDF6E3 #E5201D
    }
}


